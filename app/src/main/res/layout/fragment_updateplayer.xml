<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updatePlayer.UpdatePlayerFragment"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp">

    <ImageView
        android:id="@+id/iv_player"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_nom_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:autofillHints="name"
        android:hint="Modifier le nom du joueur"
        android:imeOptions="actionNext"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_player" />

    <EditText
        android:id="@+id/et_url_image_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:autofillHints="name"
        android:hint="URL de l'image du player"
        android:imeOptions="actionNext"
        android:inputType="textUri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_nom_player" />

    <TextView
        android:id="@+id/tv_c1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compétence 1"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/et_url_image_player"
        />

    <TextView
        android:id="@+id/tv_competence_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_c1"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/b_modifier_competence_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_c1"
        />

    <TextView
        android:id="@+id/tv_c2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compétence 2"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_competence_1"
        />

    <TextView
        android:id="@+id/tv_competence_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_c2"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/b_modifier_competence_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_c2"
        />

    <TextView
        android:id="@+id/tv_c3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compétence 3"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_competence_2"
        />

    <TextView
        android:id="@+id/tv_competence_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_c3"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/b_modifier_competence_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_c3"
        />

    <Button
        android:id="@+id/b_valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>